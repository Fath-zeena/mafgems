  "conditionalFields": {
    "description": "Fields that appear based on selections",
    "rules": [
      {
        "condition": "inputMethod == 'text-to-image' || inputMethod == 'text-to-video' || inputMethod == 'text-to-3d'",
        "show": ["prompt", "styleReference", "colorPalette"]
      },
      {
        "condition": "inputMethod == 'image-to-video' || inputMethod == 'image-to-3d' || inputMethod == 'text-to-video'",
        "show": ["videoDuration", "videoFormat", "frameRate"]
      },
      {
        "condition": "inputMethod includes 'video'",
        "show": ["audioMusic", "videoStyle"]
      },
      {
        "condition": "inputMethod includes '3d'",
        "show": ["3dQuality", "3dFormat", "renderTechnique"]
      }
    ]
  },
