{
  "page": "Create Tab - The New Black AI Fashion Design Generator",
  "description": "UI structure and configuration options for the Create tab",
  "lastAnalyzed": "2024-02-08",
  "layout": {
    "structure": "Two-column layout with form panel on left and preview/canvas on right",
    "topNavigation": {
      "tabs": [
        {
          "name": "Create",
          "active": true,
          "description": "Main creation interface"
        },
        {
          "name": "Gallery",
          "active": false,
          "description": "View all created designs"
        }
      ]
    }
  },
  "inputMethodSelection": {
    "section": "Input Method Selection Buttons",
    "style": "Horizontal button group/tabs",
    "description": "Primary selection for how to start the design process",
    "options": [
      {
        "id": "text-to-image",
        "label": "Text to Image",
        "icon": "text-input",
        "description": "Generate clothing designs from text descriptions",
        "enabled": true,
        "formFields": [
          {
            "name": "prompt",
            "label": "Design Description",
            "type": "textarea",
            "placeholder": "Describe your clothing design...",
            "required": true,
            "characterLimit": 1000,
            "examples": [
              "Red silk dress with long sleeves",
              "Casual blue denim jacket with pockets",
              "Formal tuxedo with bow tie"
            ]
          }
        ]
      },
      {
        "id": "text-to-video",
        "label": "Text to Video",
        "icon": "text-to-video",
        "description": "Generate fashion videos from text descriptions",
        "enabled": true,
        "formFields": [
          {
            "name": "prompt",
            "label": "Video Description",
            "type": "textarea",
            "placeholder": "Describe your video concept...",
            "required": true,
            "characterLimit": 1000
          },
          {
            "name": "videoDuration",
            "label": "Video Duration",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "15",
                "label": "15 seconds"
              },
              {
                "value": "30",
                "label": "30 seconds"
              },
              {
                "value": "60",
                "label": "60 seconds"
              }
            ]
          },
          {
            "name": "videoFormat",
            "label": "Output Format",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "mp4",
                "label": "MP4 (H.264)"
              },
              {
                "value": "webm",
                "label": "WebM"
              },
              {
                "value": "mov",
                "label": "MOV (QuickTime)"
              }
            ]
          }
        ]
      },
      {
        "id": "image-to-video",
        "label": "Image to Video",
        "icon": "image-to-video",
        "description": "Transform static clothing images into dynamic videos",
        "enabled": true,
        "formFields": [
          {
            "name": "image",
            "label": "Upload Image",
            "type": "file-upload",
            "accept": ".jpg,.jpeg,.png,.webp",
            "maxFileSize": "10MB",
            "required": true
          },
          {
            "name": "videoPrompt",
            "label": "Video Style/Motion Description (Optional)",
            "type": "textarea",
            "placeholder": "Describe the motion or style...",
            "required": false,
            "characterLimit": 500
          },
          {
            "name": "videoDuration",
            "label": "Video Duration",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "15",
                "label": "15 seconds"
              },
              {
                "value": "30",
                "label": "30 seconds"
              },
              {
                "value": "60",
                "label": "60 seconds"
              }
            ]
          }
        ]
      },
      {
        "id": "image-to-3d",
        "label": "Image to 3D",
        "icon": "image-to-3d",
        "description": "Convert 2D clothing images into 3D models",
        "enabled": true,
        "formFields": [
          {
            "name": "image",
            "label": "Upload Clothing Image",
            "type": "file-upload",
            "accept": ".jpg,.jpeg,.png,.webp",
            "maxFileSize": "10MB",
            "required": true
          },
          {
            "name": "3dQuality",
            "label": "3D Model Quality",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "standard",
                "label": "Standard (faster processing)"
              },
              {
                "value": "high",
                "label": "High Quality (more detailed)"
              },
              {
                "value": "ultra",
                "label": "Ultra (highest detail)"
              }
            ]
          },
          {
            "name": "3dFormat",
            "label": "Export Format",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "glb",
                "label": "GLB (recommended)"
              },
              {
                "value": "gltf",
                "label": "glTF"
              },
              {
                "value": "obj",
                "label": "OBJ"
              },
              {
                "value": "fbx",
                "label": "FBX"
              }
            ]
          }
        ]
      },
      {
        "id": "text-to-3d",
        "label": "Text to 3D",
        "icon": "text-to-3d",
        "description": "Generate 3D clothing models directly from text descriptions",
        "enabled": true,
        "formFields": [
          {
            "name": "prompt",
            "label": "3D Design Description",
            "type": "textarea",
            "placeholder": "Describe your 3D clothing piece...",
            "required": true,
            "characterLimit": 1000,
            "examples": [
              "Blue leather jacket with zippers",
              "Flowing summer dress with floral pattern",
              "Athletic hoodie with textured material"
            ]
          },
          {
            "name": "3dQuality",
            "label": "Model Quality",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "standard",
                "label": "Standard (faster)"
              },
              {
                "value": "high",
                "label": "High Quality"
              },
              {
                "value": "ultra",
                "label": "Ultra (most detailed)"
              }
            ]
          },
          {
            "name": "3dFormat",
            "label": "Export Format",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "glb",
                "label": "GLB (recommended)"
              },
              {
                "value": "gltf",
                "label": "glTF"
              },
              {
                "value": "obj",
                "label": "OBJ"
              }
            ]
          }
        ]
      }
    ]
  },
